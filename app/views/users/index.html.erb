<div class="container">
    <h1>Users</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role&.titleize %></td>
                    <td>
                        <%= link_to 'Show', user_path(user), class: 'btn btn-sm btn-info' %>
                        <% if user.id == current_user.id %>
                            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-primary' %>
                            <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
</div>